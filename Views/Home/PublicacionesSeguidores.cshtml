@{
    ViewData["Title"] = "Publicaciones de Seguidores";
}

<h1 class="text-center">Bienvenido Usuario @ViewBag.Usuario.Nombre</h1>

@foreach (var postsFeed in ViewBag.PublicacionesSeguidos)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">@postsFeed.Nombre</h4>
        </div>
        <div class="card-body">
            <img src="@postsFeed.Imagen" class="img-fluid mx-auto d-block" alt="">
            <p class="card-text">@postsFeed.Descripcion</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" id="like-button-@postsFeed.ID" class="btn btn-sm btn-outline-secondary" onclick="corazonClick(@postsFeed.ID)">&#9825; <span id="like-count-@postsFeed.ID">@postsFeed.ContadorLikes</span></button>
                </div>
            </div>
        </div>
    </div>
}

<div class="d-flex justify-content-between align-items-center mt-4">
    <a href='@Url.Action("Index", "Home")' class="btn btn-danger">Cerrar sesión</a>
    <a href='@Url.Action("Profile", "Home", new { IdUsuario = ViewBag.Usuario.ID })' class="btn btn-primary">Perfil</a>
    <a href='@Url.Action("CrearPubli", "Home", new { IdUsuario = ViewBag.Usuario.ID })' class="btn btn-primary">Crear Publicación</a>
    <a href='@Url.Action("Home", "Home", new { IdUsuario = ViewBag.Usuario.ID })' class="btn btn-primary">Feed</a>
</div>
