<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />


<h1>Bienvenido Usuario @ViewBag.Usuario.Nombre</h1>
<div class="container">
@foreach (PostsFeed postsFeed in ViewBag.Feeds)
{

    <h1>Usuario: @postsFeed.Nombre</h1>    
    <img src="@postsFeed.Imagen" alt="">    
    <h5> Descripcion: @postsFeed.Descripcion</h5>
    <p>Likes: @postsFeed.ContadorLikes</p> 
    <div class="corazon" id="@postsFeed.ID" onclick="corazonClick(@postsFeed.ID)">
    <h5>&#9825;</h5>
    </div>
}


    <a href='@Url.Action("Index", "Home")' class="btn btn-danger">cerrar sesión</a>
    <a href='@Url.Action("Profile", "Home", new { IdUsuario = ViewBag.Usuario.ID })' class="btn btn-primary">Perfil</a>
    <a href='@Url.Action("CrearPubli", "Home", new { IdUsuario = ViewBag.Usuario.ID })' class="btn btn-primary">Crear Publicación</a>

</div>

