<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Petnex</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
</head>
<body>

<div class="container">
    <h1 class="text-center">Bienvenido Usuario @ViewBag.Usuario.Nombre</h1>
    @foreach (PostsFeed postsFeed in ViewBag.Feeds)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">@postsFeed.Nombre</h4>
            </div>
            <div class="card-body">
                <img src="@postsFeed.Imagen" class="img-fluid mx-auto d-block" alt="">    
                <p class="card-text">@postsFeed.Descripcion</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                    <button type="button" id="like-button-@postsFeed.ID" class="btn btn-sm btn-outline-secondary" onclick="corazonClick(@postsFeed.ID)">&#9825; <span id="like-count-@postsFeed.ID">@postsFeed.ContadorLikes</span></button>                    </div>
                </div>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href='@Url.Action("Index", "Home")' class="btn btn-danger">Cerrar sesión</a>
        <a href='@Url.Action("Profile", "Home", new { IdUsuario = ViewBag.Usuario.ID })' class="btn btn-primary">Perfil</a>
        <a href='@Url.Action("CrearPubli", "Home", new { IdUsuario = ViewBag.Usuario.ID })' class="btn btn-primary">Crear Publicación</a>
    </div>

    <a href='@Url.Action("PublicacionesSeguidores", "Home")' class="btn btn-primary mt-4">Publicaciones de Seguidores</a>

</div>

</body>
</html>